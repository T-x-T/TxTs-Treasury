{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "esnext",
    "watch": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule" : true,
  }
}